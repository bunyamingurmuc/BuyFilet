                                    <div class="swiper-slide testimonial testimonial-blockquote testimonial-inversed swiper-slide-next" role="group" aria-label="2 / 3" style="width: 400px; margin-right: 20px;">
                                        <blockquote>
                                            @questionAndAnswer.Question
